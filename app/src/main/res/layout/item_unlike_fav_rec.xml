<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_fav_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/image_avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_fav_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Hello dsu"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_fav_img"
                app:layout_constraintTop_toTopOf="@+id/iv_fav_img"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_fav_desc"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam tempus interdum mi nec luctus. Pellentesque congue, ligula a convallis dapibus, lectus felis laoreet lacus, sed bibendum mi dolor sodales leo. Curabitur ultrices vehicula mi. Vivamus hendrerit tortor ut leo dignissim convallis. Sed sollicitudin lobortis auctor. Vestibulum pretium augue ex, sit amet blandit lectus faucibus eu. Praesent aliquet ultrices mi, eu gravida diam sodales et. Etiam sagittis mi leo. Aenean sed elit velit."
                app:layout_constraintBottom_toBottomOf="@+id/iv_fav_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_fav_img"
                app:layout_constraintTop_toBottomOf="@+id/tv_fav_name"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/iv_icon_fav"
                android:src="@drawable/ic_baseline_star_24"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>